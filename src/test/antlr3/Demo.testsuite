gunit Demo;

@header {
	package com.octo.mvnantlr;
	
	// On n'importe pas explicitement les classes DemoLexer/Parser : elles sont
	// attendues dans le mme package que le test case.
}

exprPri1:
	"12"					returns [12]		// Teste la valeur de retour
	"(1+2)"					returns [3]
	"-(1+2)"				returns [-3]

exprPri2:
	"2*3"					returns [6]
	"2*3*4"					returns [24]
	"24/3"					returns [8]
	"24/3/2"				returns [4]
	
expr:
	"1+2"					returns [3]
	"1+2+3"					returns [6]
	"1-2"					returns [-1]
	"1-2-3"					returns [-4]

statement:
	"print 12"				FAIL				// VŽrifie que le parsing Žchoue bien
	"print 12;"				-> "12\n"			// VŽrifie la sortie standard (et que le parsing rŽussit)
	"a=5;"					OK					// VŽrifie simplement que le parsing rŽussit

program:
	"// blablabla"			OK
	"print 12"				FAIL
	"print 12;"				-> "12\n"
	"a=5;"					OK
	"a=5; print a;"			-> "5\n"
